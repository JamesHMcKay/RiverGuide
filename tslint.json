{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "object-literal-sort-keys": false,
        "no-shadowed-variable": false
    },
    "rules": {
        "object-literal-sort-keys": false,
        "no-shadowed-variable": false,
        "no-console": [true, "log"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator"
        ],
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration"
        ]
    },
    "rulesDirectory": [],
    "tslint.jsEnable": false,
    "linterOptions": {
        "exclude": [
            "bin",
            "*/*.js",
            "*/*/*.js"
        ]
    }
}